@model FormularioProfesor
@{
    ViewData["Title"] = "Estudiante";
}
<div>
    <div class="mb-5 bg-dark" style="border-radius:15px 15px 15px 15px; box-shadow:0 15px 15px 0;
    ">
        <h2 style="color:white; text-align:center;">Solicitud Profesor</h2>
    </div>
    <div class="row justify-content-md-center text-center mb-3">
        <form asp-action="SolicitudesProfesor" asp-controller="ControladorProfesor" class="FormularioEstudiante">
            <div class="mb-3" style="margin-top:30px;">
                <label asp-for="Nombre" class="form-label"></label>
                <input type="text" class="form-control" asp-for="Nombre"
                       placeholder="Ingrese nombre" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Apellido" class="form-label"></label>
                <input type="text" class="form-control" asp-for="Apellido"
                       placeholder="Ingrese apellido" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Documento" class="form-label"></label>
                <input type="text" class="form-control" asp-for="Documento"
                       placeholder="Ingrese el documento" />
                <span asp-validation-for="Documento" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Nacimiento" class="form-label"></label>
                <input type="date" class="form-control" asp-for="Nacimiento"
                       placeholder="Ingrese fecha de nacimiento" />
                <span asp-validation-for="Nacimiento" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Asignatura" class="form-label"></label>
                <input type="text" class="form-control" asp-for="Asignatura"
                       placeholder="Ingrese la carrera que se encuentra cursando" />
                <span asp-validation-for="Asignatura" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Gmail" class="form-label"></label>
                <input type="email" class="form-control" asp-for="Gmail"
                       placeholder="Ingrese gmail" />
                <span asp-validation-for="Gmail" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Observacion" class="form-label col-3"></label>
                <textarea class="form-control" asp-for="Observacion" rows="3"
                          placeholder="Ingrese su observación"></textarea>
                <span asp-validation-for="Observacion" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" id="btnEnviarEstudiante">Enviar</button>
            <a asp-action="Inicio" asp-controller="Home" type="submit" class="btn btn-secondary"
            id="btnEnviarEstudiante">Cancelar</a>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
